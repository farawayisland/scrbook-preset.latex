% ~/Library/texmf/tex/latex/scrbook-preset/hypertext/scrbook-preset-hypertext.sty
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{scrbook-preset-hypertext}[2025/06/01 The hypertext package%
of the `scrbook-preset` bundle]

\RequirePackage{scrbook-preset-library} % The library package of
% the `scrbook-preset` bundle
\RequirePackage{hyperref} % Extensive support for hypertext in LaTeX
\hypersetup{%
  pdfpagelayout = SinglePage,
  pdfpagemode = UseOutlines,
  pdfview = Fit,
  colorlinks = true,
  filecolor = CustomBlue,
  linkcolor = CustomBlue,
  urlcolor = CustomBlue,
  linktoc = all
}
\RequirePackage[all]{hypcap} % Adjusting the anchors of captions
\RequirePackage{bookmark} % A new bookmark (outline) organization for `hyperref`
\bookmarksetup{%
  addtohook={%
    \ifnum\bookmarkget{level}<1%
    \bookmarksetup{bold}%
    \fi
  },
  numbered,
  open
}
\RequirePackage[capitalise, nameinlink]{cleveref}
% Intelligent cross-referencing

%% COLORS
% Custom \href macro with color argument
\newcommand*{\hrefcolor}[3][black]{\href{#2}{\color{#1}{#3}}}

