% ASTRONOMICAL SYMBOLS
%% Solar system
\newcommand*{\Earth}{\oplus}
\newcommand*{\Moon}{\mkern-0.18mu\raisemath{0.7875pt}{\leftmoon}}
\newcommand*{\Sun}{\odot}

% UNITS AND CONSTANTS
%% Units in astronomy
%% Sources:
%% https://tex.stackexchange.com/a/695361
\newcommand*{\unitslanguage}{english}
\DeclareSIUnit{\east}{\text{\ E}}
\DeclareSIUnit{\hour}{\textsuperscript{h}}
\DeclareSIUnit{\minute}{\textsuperscript{m}}
\DeclareSIUnit{\north}{\text{\ N}}
\newcommand*{\rightascension}[2][]{%
  \ang[%
    angle-symbol-degree = \!\textsuperscript{h},
    angle-symbol-minute = \!\textsuperscript{m},
    angle-symbol-second = \!\textsuperscript{s},
  #1]{#2}%
}
\DeclareSIUnit{\south}{\text{\ S}}
\DeclareSIUnit{\west}{\text{\ W}}
\DeclareSIUnit{\year}{\text{year}}
\AtBeginDocument{%
  \IfStringsEqualTF{\unitslanguage}{indonesian}{%
    \DeclareSIUnit{\day}{\text{hari}}
    \DeclareSIUnit{\east}{\text{\ BT}}
    \DeclareSIUnit{\hour}{\textsuperscript{j}}
    % \DeclareSIUnit{\minute}{\textsuperscript{m}}
    \DeclareSIUnit{\north}{\text{\ LU}}
    \renewcommand*{\rightascension}[2][]{%
      \ang[%
        angle-symbol-degree = \!\textsuperscript{j},
        angle-symbol-minute = \!\textsuperscript{m},
        angle-symbol-second = \!\textsuperscript{d},
      #1]{#2}%
    }
    \DeclareSIUnit{\south}{\text{\ LS}}
    \DeclareSIUnit{\west}{\text{\ BB}}
    \DeclareSIUnit{\year}{\text{tahun}}
  }{}
}

