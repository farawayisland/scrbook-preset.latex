% LANGUAGE SETTINGS
%% Headings
\newcommand*{\headingslanguage}{english}
\AtBeginDocument{%
  \IfStringsEqualTF{\headingslanguage}{indonesian}{%
    \renewcommand*{\assumptionname}{Asumsi}
    \renewcommand*{\axiomname}{Aksioma}
    \renewcommand*{\chaptername}{Bab}
    \renewcommand*{\contentsname}{Daftar Isi}
    \renewcommand*{\corollaryname}{Korolari}
    \renewcommand*{\definitionname}{Definisi}
    \renewcommand*{\examplename}{Contoh}
    \renewcommand*{\exercisename}{Latihan}
    \renewcommand*{\lemmaname}{Lema}
    \renewcommand*{\notename}{Catatan}
    \renewcommand*{\partname}{Bagian}
    \renewcommand*{\proofname}{Bukti}
    \renewcommand*{\propositionname}{Proposisi}
    \renewcommand*{\remarkname}{Komentar}
    \renewcommand*{\theoremname}{Teorema}
  }{}
}

%% `siunitx`
\newcommand{\SISetupBasedOnLang}{%
  \ifcurrentlanguage{indonesian}{
    \sisetup{
      output-decimal-marker = {,},
      range-phrase = {\text{\ hingga\ }},
    }
  }{}
}

